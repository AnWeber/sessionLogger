{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    },
    "File": {
      "MaxFileSize": 10485760,
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": true,
        "JsonWriterOptions": {
          "Indented": true
        }
      },
      "Files": [
        {
          "Path": "log-<counter>.txt"
        }
      ]
    }
  }
}